extends ./layout.jade

block body
  if isAuthenticated()
    p
      a.btn.btn-primary(href='/pitcher/' + pitcher.id + '/game/create') Add a Game
      a.btn.btn-primary(href='/pitcher/' + pitcher.id + '/update') Edit #{pitcher.firstname} #{pitcher.lastname}
  else
    p Log in to add a game
  h3 #{pitcher.firstname} #{pitcher.lastname}, ##{pitcher.number}
  h5 #{pitcher.playeryear} #{pitcher.playercity} #{pitcher.playerteam}
    
  img(src=pitcher.picture)
  script(type='text/javascript', src='#{pitcher.profile}')
  include ./partials/games.jade

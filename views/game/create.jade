extends ../layout.jade

block body
  h1 Add a game to #{pitcher.firstname} #{pitcher.lastname}

  form(novalidate method="POST" action="/pitcher/" + pitcher.id + "/game/success" name="gameForm")
    .form-group
      label(for="date") Game Date
      input.form-control(type="date" required name="date" ng-model="date")
      br
      label(for="homeaway") Home/Away?
      input.form-control(type="text" required name="homeaway" ng-model="homeaway")
      br
      label(for="opponentcity") Opponent City/State
      input.form-control(type="text" required name="opponentcity" ng-model="opponentcity")
      br
      label(for="opponentname") Opponent City/State
      input.form-control(type="text" required name="opponentname" ng-model="opponentname")
      br
      label(for="tableau") Game Pitch Tracker
      input.form-control(type="text" required name="tableau" ng-model="tableau")
      br
    button.btn.btn-success(type="submit") Add
